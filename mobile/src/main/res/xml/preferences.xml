<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<android.support.v7.preference.PreferenceCategory android:title="@string/general">
		<android.support.v7.preference.Preference
			android:key="@string/prefs_key_clear_cache"
			android:summary="@string/clear_cache_desc"
			android:title="@string/clear_cache_title" />
		<android.support.v7.preference.Preference
			android:key="@string/prefs_key_clear_history"
			android:summary="@string/clear_history_desc"
			android:title="@string/clear_history_title" />
		<android.support.v7.preference.Preference
			android:key="@string/prefs_key_backup"
			android:summary="@string/backup_desc"
			android:title="@string/backup_restore" />
		<android.support.v7.preference.Preference
			android:key="@string/prefs_key_import_opml"
			android:summary="@string/pref_import_opml_desc"
			android:title="@string/import_opml" />
	</android.support.v7.preference.PreferenceCategory>
	<android.support.v7.preference.PreferenceCategory android:title="@string/sync">
		<android.support.v7.preference.SwitchPreferenceCompat
			android:defaultValue="false"
			android:key="@string/prefs_key_sync"
			android:summary="@string/sync_desc"
			android:title="@string/sync" />
		<android.support.v7.preference.Preference
			android:defaultValue="30"
			android:key="@string/prefs_key_sync_interval"
			android:title="@string/sync_interval" />
		<android.support.v7.preference.Preference
			android:key="@string/prefs_key_sync_now"
			android:title="@string/sync_now" />
	</android.support.v7.preference.PreferenceCategory>
	<android.support.v7.preference.PreferenceCategory android:title="@string/advanced">
		<android.support.v7.preference.SwitchPreferenceCompat
			android:defaultValue="true"
			android:key="@string/prefs_key_custom_tabs"
			android:summary="@string/use_custom_tabs"
			android:title="@string/custom_tabs_title" />
		<android.support.v7.preference.SwitchPreferenceCompat
			android:defaultValue="true"
			android:key="@string/prefs_key_amp"
			android:summary="@string/prefs_amp_desc"
			android:title="@string/prefs_amp" />
		<android.support.v7.preference.SwitchPreferenceCompat
			android:defaultValue="true"
			android:key="@string/prefs_key_url_shortener"
			android:summary="@string/prefs_url_shortener_desc"
			android:title="@string/prefs_url_shortener" />
		<android.support.v7.preference.SwitchPreferenceCompat
			android:defaultValue="true"
			android:key="@string/prefs_key_show_recent_feeds"
			android:summary="@string/on_the_news_page"
			android:title="@string/show_recent_feeds" />
		<android.support.v7.preference.SwitchPreferenceCompat
			android:defaultValue="true"
			android:key="@string/prefs_key_show_recommended_feeds"
			android:summary="@string/on_the_news_page"
			android:title="@string/show_recommended_feeds" />
	</android.support.v7.preference.PreferenceCategory>
	<android.support.v7.preference.PreferenceCategory android:title="@string/about">
		<android.support.v7.preference.Preference
			android:key="@string/prefs_key_about_nc"
			android:summary="@string/about_nc_desc"
			android:title="@string/about_nc" />
		<android.support.v7.preference.Preference
			android:key="@string/prefs_key_show_tutorial"
			android:title="@string/show_tutorial" />
		<android.support.v7.preference.Preference
			android:key="@string/prefs_key_view_libs"
			android:summary="@string/view_all_libraries"
			android:title="@string/used_libraries" />
		<android.support.v7.preference.Preference
			android:key="@string/prefs_key_view_apis"
			android:summary="@string/view_all_apis"
			android:title="@string/used_apis" />
		<android.support.v7.preference.Preference
			android:key="@string/prefs_key_issue"
			android:title="@string/submit_issue" />
	</android.support.v7.preference.PreferenceCategory>
</android.support.v7.preference.PreferenceScreen>